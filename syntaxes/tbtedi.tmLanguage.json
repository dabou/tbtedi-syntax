{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Tbtedi",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numeric"
		},
		{ "include": "#comments" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "entity.name.class",
				"match": "\\b(LINK|ELINK|LINKTABLE|ELINKTABLE|MESSAGE|EMESSAGE|RECORD|ERECORD)\\b"
			},
			{
				"name": "entity.name.type",
				"match": "\\*\\b(DEC|CHAR)\\b"
			},
			{
				"name": "keyword.control.tbtedi",
				"match": "\\b(TRIGGER|DECLARE|CONDITION|FIELD)\\b"
			},
			{
				"match": "\\b(IN|INX|INY|INP|INC|OUT|OUTX|OUTY|OUTP|TEXT|X|Y|OPERATOR|VALUE|VAR|FCT|FMTIN|FMTOUT|COUNTER|SPECIAL|CARD|CONST|NAME|TYPE|MIN|MAX|CHECKSUM|OCHECKSUM|ICHECKSUM|INDSC|OUTDSC|FMT|INZ|FSEPARATOR)\\b\\(",
				"captures": {
					"1": { "name": "entity.name.function.tbtedi" }
		  		}
			},
			{
				"name": "constant.language.tbtedi",
				"match": "\\*\\b(ROOT|FILE|MSG|PHYSICAL|FLAT|EDIFACT|AINSI|XML|TRADACOMS|CSV)\\b"
			},
			{
				"name": "constant.language.tbtedi",
				"match": "\\*\\b(CLR|INC|FCT|CONST|VAR|YMD|HM|SESSION|EACH|TRACE|UNH|UNB|UNZ|DATETIMET|SUM|DATE|TIME|SENDER|DESTINER|DOC|COUNTER|PERSIST|COMMA|SEMICOLON)\\b"
			},
			{
				"name": "constant.language.operator.tbtedi",
				"match": "\\*\\b(EQ|NE|LE|GE|LT|GT|ISNULL|ISNOTNULL)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.tbtedi",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.tbtedi",
					"match": "\\\\."
				}
			]
		},
		"numeric": {
			"name": "numeric",
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\d"
				}
			]
		},

		"comments": {
			"patterns": [
				{ "match": "(//).*",
					"name": "comment.line.double-slash.tbtedi"
				},
				{ "begin": "/\\*",
					"end": "\\*/",
					"name": "comment.block.tbtedi"
				}
			]
		}
	},
	"scopeName": "source.celink",
	"fileTypes": ["celink", "cedesc"]
}
